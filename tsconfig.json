{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "store/*": ["store/*"],
      "config/*": ["config/*"],
      "styles/*": ["styles/*"],
      "utils/*": ["utils/*"],
      "models/*": ["models/*"],
      "components/*": ["components/*"],
    },
    "noEmit": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "module": "es6",
    "target": "es6",
    "moduleResolution": "node",
    "jsx": "react",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
